<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.feed.FeedActivity">

    <org.imaginativeworld.whynotimagecarousel.ImageCarousel
        android:id="@+id/feed_ic_carousel"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/feed_bt_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ProgressBar
        android:id="@+id/feed_pb_carousel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/feed_ic_carousel"
        app:layout_constraintBottom_toBottomOf="@id/feed_ic_carousel"
        app:layout_constraintStart_toStartOf="@id/feed_ic_carousel"
        app:layout_constraintEnd_toEndOf="@id/feed_ic_carousel"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/feed_rv_news"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/item_news"
        app:layout_constraintTop_toBottomOf="@id/feed_ic_carousel"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ProgressBar
        android:id="@+id/feed_pb_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/feed_rv_news"
        app:layout_constraintBottom_toBottomOf="@id/feed_rv_news"
        app:layout_constraintStart_toStartOf="@id/feed_rv_news"
        app:layout_constraintEnd_toEndOf="@id/feed_rv_news"/>

</androidx.constraintlayout.widget.ConstraintLayout>